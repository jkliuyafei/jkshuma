/* pages/contact-us/contact-us.wxss */

page {
  height: 98%;
  border-top: 0.5px solid #dfdede;
}
.main-content{
  margin-top: 40rpx;
  width: 100%;
  height: 100%;
  
}
::-webkit-scrollbar{
  height: 0;
  width: 0;
  color:transparent;
}

.shop-head {
  flex-wrap: nowrap;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-bottom: 15rpx;
  border-bottom: 1px dashed #e5e5e5;
  align-items: center;
  display: flex;
}

.shop-name-content {
  height: 100%;
  margin-right: 10rpx;
}

.shop-name {
  font-size: 42rpx;
  color: #000;
}

.shop-describe {
  font-size: 28rpx;
  color: #b2b2b2;
  margin-top: 18rpx;
  margin-bottom: 30rpx;
}

.shop-logo {
  width: 100rpx;
  height: 100rpx;
}

.image-content {
  margin-top: -30rpx;
}

.shop-info-item {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.shop-item-hover {
  background-color: #ececec;
}

.shop-info-text {
  color: #353535;
  font-size: 28rpx;
  width: 100%;
}

.shop-info-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
}

.forward {
  width: 24rpx;
  height: 24rpx;
  margin-left: 28rpx;
  margin-right: 28rpx;
}

.shop-photo-content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding-left: 28rpx;
  padding-right: 28rpx;
}
.shop-photo{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
 
}
