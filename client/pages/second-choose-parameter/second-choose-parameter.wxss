.main{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding-left: 2%;
 border-top: 0.5px solid #dfdede;
}
.color-hint, .volume-hint{
  margin-bottom: 20rpx;
  margin-top: 10rpx;
}
.color-block, .volume-block{
  width: 100%;
}
.color-item, .volume-item{
  width: 28%;
  margin-right: 5%;
  height: 60rpx;
  float: left;
  line-height: 60rpx;
  background-color: #f2f3f6;
  text-align: center;
  margin-bottom: 15rpx;
  color: #43474c;
}
.color-item.on ,.volume-item.on{
  background-color: #fdecea;
  color: #e4393c;
}