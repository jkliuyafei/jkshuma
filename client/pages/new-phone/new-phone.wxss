page{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}
.custom-service {
  position: fixed;
  bottom: 20rpx;
  right: 0;
  height: 60rpx;
  width: 145rpx;
  z-index: 100;
  font-size: 24rpx;
  line-height: 60rpx;
  border-radius: 30rpx 0 0 30rpx;
}

.head {
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #36f;
  z-index: 10000;
  align-items: center;
  justify-content: space-between;
}

.update-time {
  color: #dfdede;
  margin-left: 20rpx;
}

.refresh{
  height: 54rpx;
  width: 54rpx;
  margin-right: 20rpx;
}
.head-wrap{
  width: 100%;
  height: 80rpx;
}
.main{
  width: 100%;
  position: absolute;
  top:80rpx;
  bottom: 0rpx;
  display: flex;
}
.nav-left{
  height: 100%;
  width: 22%;
  margin-right: 1%;
}
.content-right{
  width: 77%;
  height: 100%;
}
.nav-scroll{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.content-scroll{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.nav-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #333;
  border-top: 0.5px solid #dfdede;
  border-right: 0.5px solid #dfdede;
}

.nav-list.on {
  height: 90rpx;
  line-height: 90rpx;
  color: #e4393c;
  background-color: #fff;
  text-align: center;
  border-top: 0.5px solid #dfdede;
  border-left: 3px solid #e4393c;
  border-right: none;
}
.include-brand-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 8px;
  border-left: 0.5px solid #dfdede;
}
.phone-brand{
  height: 60rpx;
  line-height: 60rpx;
  background: #fafafa;
  width: 100%;
  border-bottom: 0.5px solid #dfdede;
  text-align: center;
  color: #e4393c;
}
.include-model-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.phone-model{
  height: 60rpx;
  background: #fafafa;
  width: 100%;
  line-height: 60rpx;
  text-align: center;
  color: #e4393c;
  border-bottom: 0.5px solid #dfdede;
}
.include-volume-content{
  width: 100%;
  display: flex;

}
.volume-father{
  width: 30%;
  display: flex;
  align-items: center;
  border-bottom: 0.5px solid #dfdede;
}
.phone-volume{
  width: 100%;
  text-align: center;
  color:#888;
}
.include-other-content-father{
  width: 70%;
  display: flex;
  flex-direction: column;
}
.include-other-content{
  width: 100%;
  display: flex;
}
.other-item-content{
  width: 100%;
  display: flex;
  border-bottom: 0.5px solid #dfdede;
}
.other-item{
  height: 60rpx;
  flex: 1;
  line-height: 60rpx;
  color: #888;
  text-align: center;
  border-left: 0.5px solid #dfdede;
}
.statement {
  width: 94%;
  margin-top: 30rpx;
  padding-bottom: 120rpx;
  margin-left: 3%;
  margin-right: 3%;
}

.statement-text {
  margin-bottom: 10rpx;
  font-size: 28rpx;
}
.statement-text.on{
  color: #e4393c;
}
