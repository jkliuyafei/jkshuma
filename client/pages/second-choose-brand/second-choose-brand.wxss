/* pages/second-choose-brand/second-choose-brand.wxss */
page,.main{
  height: 100%;
  background-color: f2f2f2;
  border-top: 0.5px solid #dfdede;
}
.main{
  display: flex;
  flex-direction: row
}
.nav-left {
  float: left;
  width: 200rpx;
  height: 100%;
  background-color: #fafafa;
  color: #888;
  box-sizing: border-box;
}

.nav-left .nav-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-top: 0.5px solid #dfdede;
  border-right: 0.5px solid #dfdede;
}

.nav-left .nav-list.on {
  color: #e4393c;
  background-color: #fff;
  text-align: center;
  border-top: 0.5px solid #dfdede;
  border-left: 3px solid #e4393c;
  border-right: none;
}
.detail-content{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.model-block{
  width: 100%;
  
}
.model-item{
  height: 60rpx;
  line-height: 60rpx;
  border: 0.5px solid #e4393c;
  text-align: center;
  width: 45.5%;
  float: left;
  margin-top: 20rpx;
  font-size: 12px;
  margin-left: 4%;
  text-overflow:ellipsis;
}
.view-hover{
  background-color: #e6e6e6;
}