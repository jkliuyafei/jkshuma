page{
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}
.main-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.row-one{
  display: flex;
  width: 100%;
}
.page-image-wrap {
  display: flex;
  flex-direction: column;
  width: 60%;
  justify-content: center;
}

.item-wrap {
  width: 100%;
  height: 80rpx;
  display: flex;
  margin-bottom: 16rpx;
}

.left-hint {
  width: 150rpx;
  padding-left: 20rpx;
  height: 100%;
  line-height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;

}

.right-input {
  height: 100%;
  width: auto;
  display: flex;
  justify-content: center;
  flex: 2;
  align-items: center;
  border: 1px solid #dfdede;
}

.form-message-input {
  height: 100%;
  line-height: 78rpx;
  width: auto;
  display: flex;
  flex: 2;
  padding-left: 20rpx;
  margin-right: 20rpx;
  align-items: center;
  border: 1px solid #dfdede;
}

.submit-btn {
  width: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 16rpx;

}
.image-wrap{
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image-pre{
  display: inline-block;
  width: 80%;
  padding-bottom: 16rpx;
 
}
.bottom-wrap{
  width: 100%;
  margin-bottom: 20rpx; 
  display: flex;
  flex-direction: row;
  flex:2;
  justify-content: flex-start;
}
.image-item-wrap{
  width: 50%;
  display: flex;
  flex-direction: column;
  float: left;
}
.image-index{
  height: 48rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #999;
}
.image-self{
  width: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.all-image-head-wrap{
  height: 76rpx;
  display: flex;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 1px dashed #dfdede;
  border-top: 1px dashed #dfdede;
}