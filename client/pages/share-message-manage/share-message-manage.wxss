/* pages/share-message-manage/share-message-manage.wxss */
.main-content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top-wrap{
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px dashed #e5e5e5;
}
.bottom-wrap{
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
}
.page-image-wrap{
  display: flex;
  width: 100%;
}
.share-message-wrap{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.submit-wrap{
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.submit-btn{
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 100%;
  height: 80rpx;
}
.form-label{
  height: 80rpx;
  line-height: 80rpx;
  flex:1;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.message-input{
  height: 78rpx;
  flex:4;
  margin-right: 18rpx;
  border: 1px solid #dfdede;
  border-radius: 20rpx;
}
.page-image{
  display: flex;
  flex:1;
  flex-direction: column
}
.image-wrap{
  flex:1;
}