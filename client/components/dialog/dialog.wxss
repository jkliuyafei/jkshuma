/* components/dialog/dialog.wxss */

.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  display: flex;
  flex-direction: column;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #f8f9f6;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.wx-dialog-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size:20px;
  border-bottom: solid 0.5px #d6d4d7;
}
.wx-dialog-content{
  padding: 18rpx;
  font-size: 18px;
  height: 120rpx;
  color: #999;
  word-wrap: break-word;
  word-break: break-all
}
.wx-dialog-footer{
  padding-left: 18rpx;
  padding-right: 18rpx;
  height:100rpx;
}
